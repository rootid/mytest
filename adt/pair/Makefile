SHELL+=-x
ROOT=../..
include $(ROOT)/common.mk

EXECS = iMyPair

HEADERS = (addsuffix $(EXECS),.h)

OBJS = (addsuffix $(EXECS),.o)

all : $(EXECS)

clean :
	rm -f $(EXECS) *.o 

$(OBJS) : 
	$(CXX) $(CXXFLAGS) -c $<

iMyPair.o : iMyPair.cxx
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $<

main.o :  iMyPair.h main.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $^

iMyPair : main.o iMyPair.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@

.PHONY: help

help:
	@echo "Please use 'make clean' to remove all files generated by make"
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  all       to make standalone HTML files"

